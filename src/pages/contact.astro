---
import ContactCard from '@/components/molecule/ContactCard.astro';
import LocationSection from '@/components/molecule/LocationSection.astro';
import Layout from '@/components/template/Layout.astro';
import { COUNTRIES } from '@/data/index';
---

<Layout title='Contact'>
	<section><ContactCard /></section>
	<section class='countries-wrapper'>
		{COUNTRIES.map((country) => <LocationSection {...country} />)}
	</section>
</Layout>

<style scoped>
	.countries-wrapper {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: space-between;
		margin-top: 120px;
		gap: 48px;
		@media (--size-md) {
			gap: 80px;
		}
		@media (--size-lg) {
			flex-direction: row;
			gap: 30px;
			margin-top: 160px;
		}
	}
</style>
