---
import ProjectCard from '@/components/molecule/ProjectCard.astro';
import ProjectHero from '@/components/molecule/ProjectHero.astro';
import Projects from '@/components/organism/Projects.astro';
import Layout from '@/components/template/Layout.astro';
import { PROJECTS } from '@/data';
const title = 'App Design';
const text =
	'We build websites that serve as powerful marketing tools and bring memorable brand experiences.';
const projects = [
	{
		name: 'AIRFILTER',
		desc: 'Solving the problem of poor indoor air quality by filtering the air',
		img: '/assets/app-design/desktop/image-airfilter.jpg',
	},
	{
		name: 'EYECAM',
		desc: 'Product that lets you edit your favorite photos and videos at any time',
		img: '/assets/app-design/desktop/image-eyecam.jpg',
	},
	{
		name: 'FACEIT',
		desc: 'Get to meet your favorite internet superstar with the faceit app',
		img: '/assets/app-design/desktop/image-faceit.jpg',
	},
	{
		name: 'TODO',
		desc: 'A todo app that features cloud sync with light and dark mode',
		img: '/assets/app-design/desktop/image-todo.jpg',
	},
	{
		name: 'LOOPSTUDIOS',
		desc: 'A VR experience app made for Loopstudios',
		img: '/assets/app-design/desktop/image-loopstudios.jpg',
	},
];
const webDesignProject = PROJECTS[0]!;
const graphicDesignProject = PROJECTS[2]!;
---

<Layout title={title}>
	<ProjectHero title={title} text={text} />
	<Projects projects={projects} />
	<section>
		<ProjectCard {...webDesignProject} /><ProjectCard
			{...graphicDesignProject}
		/>
	</section>
</Layout>
<style scoped>
	section {
		margin-top: 96px;
		display: flex;
		flex-direction: column;
		gap: 24px;
		@media (--size-lg) {
			width: 100%;

			flex-direction: row;
		}
	}
</style>
