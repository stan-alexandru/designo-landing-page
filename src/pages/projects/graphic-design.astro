---
import ProjectCard from '@/components/molecule/ProjectCard.astro';
import ProjectHero from '@/components/molecule/ProjectHero.astro';
import Projects from '@/components/organism/Projects.astro';
import Layout from '@/components/template/Layout.astro';
import { PROJECTS } from '@/data';
const title = 'Graphic Design';
const text =
	'We deliver eye-catching branding materials that are tailored to meet your business objectives.';
const projects = [
	{
		name: 'TIM BROWN',
		desc: 'A book cover designed for Tim Brown’s new release, ‘Change’',
		img: '/public/assets/graphic-design/desktop/image-change.jpg',
	},
	{
		name: 'BOXED WATER',
		desc: 'A simple packaging concept made for Boxed Water',
		img: '/public/assets/graphic-design/desktop/image-boxed-water.jpg',
	},
	{
		name: 'SCIENCE!',
		desc: 'A poster made in collaboration with the Federal Art Project',
		img: '/public/assets/graphic-design/desktop/image-science.jpg',
	},
];
const webDesignProject = PROJECTS[0]!;
const appDesignProject = PROJECTS[1]!;
---

<Layout title={title}>
	<ProjectHero title={title} text={text} />
	<Projects projects={projects} />
	<section>
		<ProjectCard {...appDesignProject} /><ProjectCard {...webDesignProject} />
	</section>
</Layout>
<style scoped>
	section {
		margin-top: 96px;
		display: flex;
		flex-direction: column;
		gap: 24px;
		@media (--size-lg) {
			width: 100%;

			flex-direction: row;
		}
	}
</style>
