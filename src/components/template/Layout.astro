---
import '@/assets/style/main.css';
import { SEO } from 'astro-seo';
import Header from '@/components/organism/Header.astro';
import Footer from '@/components/organism/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/favicon-32x32.png' />
		<link rel='sitemap' href='/sitemap-index.xml' />
		<SEO
			titleTemplate='%s | Designo'
			titleDefault='Designo Landing page'
			title={title}
			description='Designo landing page challenge from FrontEnd Mentor'
			openGraph={{
				basic: {
					title: 'Designo landing page challenge from FrontEnd Mentor',
					type: 'website',
					image: '/og-image.webp',
					url: 'https://designo.alexstan.com',
				},
			}}
			twitter={{
				card: 'summary',
			}}
		/>
		<meta name='generator' content={Astro.generator} />
	</head>
	<body>
		<Header />

		<main class='container'><slot /></main>
		<Footer />
	</body>
</html>
