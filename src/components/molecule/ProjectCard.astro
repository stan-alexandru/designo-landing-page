---
interface Props {
	title: string;
	href: string;
	background: {
		small: string;
		medium: string;
		large: string;
	};
}

const { title, href, background } = Astro.props;
---

<article>
	<h1>{title}</h1>
	<a href={href} title={`${title} project link`}>
		View projects
		<img
			src='/assets/shared/desktop/icon-right-arrow.svg'
			alt='arrow'
			width='7'
			height='10'
		/>
	</a>
</article>

<style
	scoped
	define:vars={{
		backgroundSmall: `url("${background.small}")`,
		backgroundMedium: `url("${background.medium}")`,
		backgroundLarge: `url("${background.large}")`,
	}}
>
	article {
		height: 15.625rem;
		width: inherit;
		margin: 0 1.5rem;
		text-align: center;
		display: flex;
		justify-content: center;
		justify-items: center;
		flex-direction: column;
		gap: 12px;
		background-image: var(--backgroundSmall);
		background-position: center center;
		border-radius: var(--border-radius);
		background-size: cover;
		@media (--size-md) {
			height: 200px;
			margin: unset;
			gap: 1.5rem;
			background-image: var(--backgroundMedium);
		}
		@media (--size-lg) {
			height: inherit;
			min-height: 308px;
			margin: unset;
			background-image: var(--backgroundLarge);
		}
	}
	article:nth-child(1) {
		grid-area: 1 / 1 / 3 / 2;
	}
	article:nth-child(2) {
		grid-area: 1 / 2 / 2 / 3;
	}
	article:nth-child(3) {
		grid-area: 2 / 2 / 3 / 3;
	}
	h1 {
		color: var(--color-primary-white);
		font-size: 1.75rem;
		line-height: 2.25rem;
		letter-spacing: 1.4px;
		text-transform: uppercase;

		margin: 0;
		@media (--size-md) {
			font-size: 2.5rem;
			line-height: 3rem;
			letter-spacing: 2px;
		}
	}
	a {
		font-size: 15px;
		letter-spacing: 5px;
		color: white;
		text-transform: uppercase;
		text-decoration: none;
		font-weight: var(--font-weight-500);
		justify-content: space-evenly;
		@media (--size-md) {
			font-size: 15px;
			letter-spacing: 5px;
		}
	}
</style>
